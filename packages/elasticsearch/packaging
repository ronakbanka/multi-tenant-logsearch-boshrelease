set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Available variables
# $BOSH_COMPILE_TARGET - where this package & spec'd source files are available
# $BOSH_INSTALL_TARGET - where you copy/install files to be included in package

tar xzf elasticsearch/elasticsearch-1.4.0.tar.gz
cp -R elasticsearch-1.4.0/* $BOSH_INSTALL_TARGET

#Plugins

mkdir -p $BOSH_INSTALL_TARGET/plugins/HQ
unzip elasticsearch-plugins/royrusso-elasticsearch-HQ-603ae9e.zip -d $BOSH_INSTALL_TARGET/plugins/HQ
mv $BOSH_INSTALL_TARGET/plugins/HQ/royrusso-elasticsearch-HQ-603ae9e $BOSH_INSTALL_TARGET/plugins/HQ/_site

mkdir -p $BOSH_INSTALL_TARGET/plugins/marvel
unzip elasticsearch-plugins/marvel-latest.zip -d $BOSH_INSTALL_TARGET/plugins/marvel
# mv $BOSH_INSTALL_TARGET/plugins/marvel-latest $BOSH_INSTALL_TARGET/plugins/marvel

tar xzf elasticsearch/kibana-3.1.0.tar.gz
mkdir -p $BOSH_INSTALL_TARGET/plugins-global/kibana/_site
mkdir -p $BOSH_INSTALL_TARGET/plugins/kibana/_site
cp -R kibana-3.1.0/* $BOSH_INSTALL_TARGET/plugins-global/kibana/_site
cp -R kibana-3.1.0/* $BOSH_INSTALL_TARGET/plugins/kibana/_site
# Configure kibana to use the "local" elasticsearch & port
sed -i 's/elasticsearch: "http:.*/elasticsearch: "http:\/\/"\+window.location.hostname+":"\+window.location.port,/' $BOSH_INSTALL_TARGET/plugins-global/kibana/_site/config.js
sed -i 's/elasticsearch: "http:.*/elasticsearch: "http:\/\/"\+window.location.hostname+":"\+window.location.port,/' $BOSH_INSTALL_TARGET/plugins/kibana/_site/config.js
